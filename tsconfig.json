{
  "extends": "@react-native/typescript-config",
  "esModuleInterop": true,
  "compilerOptions": {
    "jsx": "react-native",
    "isolatedModules": false,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods",
    "*.config.js",
  ]
}
